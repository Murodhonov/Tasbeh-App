<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

<androidx.cardview.widget.CardView
    android:id="@+id/card1"
    android:layout_width="300dp"
    android:layout_height="450dp"
    android:layout_gravity="center_horizontal"
    app:cardBackgroundColor="#0086C1F4"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/stroke"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topAction"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/top2"
            android:orientation="horizontal"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/help_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Yordam bo'limi"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_help"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/help"
            app:layout_constraintBottom_toTopOf="@id/help_1"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topAction"
            app:tint="#0A88F8" />

        <androidx.cardview.widget.CardView
            android:id="@+id/help_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="5sp"
            app:layout_constraintBottom_toTopOf="@id/help_2"
            app:layout_constraintHeight_percent="0.14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_help"
            app:layout_constraintWidth_percent="0.9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#0A88F8">

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/help"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/ques1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="Qanday qilib tasbehni yangilash mumkin ?"
                    android:textColor="@color/white"
                    android:layout_marginStart="5dp" />

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/moree"
                    app:tint="@color/white" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/help_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5sp"
            app:cardCornerRadius="5sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/help_1"
            app:layout_constraintWidth_percent="0.9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#0A88F8">

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/help"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/ques2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="Qanday qilib tilni o'zgartirish mumkin ?"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/moree"
                    app:tint="@color/white" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
</LinearLayout>